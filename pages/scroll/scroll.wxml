<!-- 水平滚动 scroll-x -->
<scroll-view class="scroll" scroll-x>
  <view wx:for="{{10}}" class="item">{{item}}</view>
</scroll-view>


<!-- 垂直滚动  scroll-y -->
<scroll-view class="scroll2" scroll-y hidden="{{true}}">
  <view wx:for="{{10}}" class="item2">{{item}}</view>
</scroll-view>
